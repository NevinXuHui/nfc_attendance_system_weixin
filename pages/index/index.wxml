<!--index.wxml-->
<view class="container">
    <view class="cover">
        <image bindtap="coverTap" class="cover_image" src="index.png" background-size="cover"></image>
    </view>
    <view class="prompt">
        <text class="prompt_text">{{prompt}}</text>
    </view>
    <block wx:if="{{hasBound}}">
        <view class="userid">
            <text class="userid_text">学号: {{stuNum}}\n</text>
        </view>
        <view class="input">
            <button class="button" bindtap="unbindBtn">解绑</button>
        </view>
        <view class="info">
            <text class="info_time">最后签到时间: {{lastTime}}\n</text>
            <text class="info_location">最后签到位置: {{lastLocation}}</text>
        </view>
    </block>
    <block wx:elif="{{hasBound!=null}}">
        <view class="input">
            <input class="inputbox" bindinput="stuNumInput" maxlength="10" type="text" name="stuNum" placeholder="学号"/>
            <input class="inputbox" bindinput="stuPwdInput" maxlength="6" type="idcard" password name="stuPwd" placeholder="密码"/>
            <button class="button" bindtap="bindBtn">绑定</button>
        </view>
    </block>
</view>
